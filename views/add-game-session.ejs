<%- include ('partials/header.ejs') %>

<div class="main_wrapper">
    <div class="form_wrapper">
        <h2>Add Game Session</h2>
        <form action="/add-game-session" method="post">
             <!-- Hidden input field for the game ID associated with the new session; serves as the foreign key in the sessions table. -->
             <input type="hidden" id="postId" name="gameId" value="<%= gameId %>"/>

            <label for="name">Game Name</label>
            <input type="text" id="input_edit_game_name" name="name" value="<%= gameName %>" readonly>
            <input type="datetime-local" id="input_session_date" name="datetime" required>
            <button type="submit" class="submit_btn">Create New Session </button>
        </form>
    </div>
</div>

